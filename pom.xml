                                <useTags>true</useTags>
                                <returnResponse>true</returnResponse>
                                <openApiSpecFileLocation>.openapi-generator/generated-spec.yaml</openApiSpecFileLocation>
                                <useJakartaEe>true</useJakartaEe>
