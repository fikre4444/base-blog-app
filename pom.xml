    <build>
        <defaultGoal>spring-boot:run</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                     <annotationProcessorPaths>
                         <path>
                             <groupId>org.mapstruct</groupId>
                             <artifactId>mapstruct-processor</artifactId>
                             <version>${org.mapstruct.version}</version>
                         </path>
                         <path>
                             <groupId>org.projectlombok</groupId>
                             <artifactId>lombok</artifactId>
                             <version>${lombok.version}</version>
                         </path>
                         <dependency>
                             <groupId>org.projectlombok</groupId>
                             <artifactId>lombok-mapstruct-binding</artifactId>
                             <version>${lombok.mapstruct.binding.version}</version>
                         </dependency>
                     </annotationProcessorPaths>
                     <compilerArgs>
                         <compilerArg>
                             -Amapstruct.defaultComponentModel=spring
                         </compilerArg>
                     </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>${openapi-generator-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>auth-api-v1</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>src/main/resources/openapi/auth-spec.1.0.0.yaml</inputSpec>
                            <generatorName>spring</generatorName>
                            <skipOverwrite>true</skipOverwrite>
                            <modelPackage>
                                com.sample.sampleservice.feature.auth.api.rest.v1.model
                            </modelPackage>
                            <apiPackage>com.sample.sampleservice.feature.auth.api.rest.v1
                            </apiPackage>
                            <output>${project.basedir}</output>
                            <supportingFilesToGenerate>
                                ApiUtil.java,RFC3339DateFormat.java
                            </supportingFilesToGenerate>
                            <configOptions>
                                <useBeanValidation>true</useBeanValidation>
                                <useSwaggerAnnotations>true</useSwaggerAnnotations>
                                <useTags>true</useTags>
                                <returnResponse>true</returnResponse>
                                <openApiSpecFileLocation>.openapi-generator/generated-spec.yaml
                                </openApiSpecFileLocation>
                                <useJakartaEe>true</useJakartaEe>
                                <dateLibrary>java8-zoneddatetime</dateLibrary>
                                <sourceFolder>target/generated-sources/openapi</sourceFolder>
                                <basePackage>com.sample.sampleservice.feature.auth</basePackage>
                                <configPackage>com.sample.sampleservice.feature.auth
                                </configPackage>
                                <invokerPackage>
                                    com.sample.sampleservice.feature.auth.api.rest.v1
                                </invokerPackage>
                                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                                <delegatePattern>true</delegatePattern>
                                <library>spring-boot</library>
                                <serializationLibrary>jackson</serializationLibrary>
                                <serializableModel>true</serializableModel>
                                <useSpringBoot3>true</useSpringBoot3>
                                <useSpringController>true</useSpringController>
                                <useOptional>true</useOptional>
                                <useLombok>true</useLombok>
                                <useLombok3>true</useLombok3>
                                <test>false</test>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sample-api-v1</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>src/main/resources/openapi/sample-spec.1.0.0.yaml</inputSpec>
                            <generatorName>spring</generatorName>
                            <skipOverwrite>true</skipOverwrite>
                            <modelPackage>
